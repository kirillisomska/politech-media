generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id               String     @id @default(uuid())
  name             String
  shortDescription String
  imageUrl         String
  fullDescription  String
  date             DateTime
  customers        Customer[]
  hidden           Boolean
}

model Customer {
  id       String    @id @default(uuid())
  name     String    @unique
  imageUrl String
  contacts String
  projects Project[]
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
}
